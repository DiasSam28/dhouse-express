<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ler Mais</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>


<body>
    <%- include("./partials/header") %>
    <main>
        <section id="destaque">
           
            <% produtos.forEach(function(produto) { %>
                <div class="div-destaque">
                
           <img src="/uploads/<%= produto.imagem %>" style="width: 100%; height: 100%">
            <div class="sub-destaque">
                
                <h3><%= produto.nome %></h3>
                <h4>R$ <%= produto.valor %></h4>
               <span class="destaque-badge"><a href="#" style="text-decoration:none; color: white;">Ver Mais</a></span>
            </div>
        </div>
            <% }) %>
       
        </section>
    </main>
    <%- include("./partials/footer") %>
</body>

</html>